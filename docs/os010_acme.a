    JMP .pullFlagsAndAThenExit                          ;

; ***************************************************************************************
;
; OSBYTE 140 - Enable Tape Filing System
;
; On Entry:
;       X = 3 for 300 baud
;       otherwise 1200 baud
;
; ***************************************************************************************
.osbyte140EntryPoint
    TXA                                                 ;
    LDX #$80                                            ; 1200 buad
