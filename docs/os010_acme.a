    EOR .vduTextColourByteEOR                           ; adjust for current foreground and background colour
    STA (.vduWriteCursorScreenAddressLow),Y             ; write to screen
    DEY                                                 ; Y=Y-1
    BPL -                                               ; if (still +ve) then branch (loop back)
    RTS                                                 ;

