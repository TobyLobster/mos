.osbyte21EntryPoint
    CPX #.bufferNumberHighest + 1                       ; test against largest buffer number
    BCS .exit0                                          ;
    CPX #2                                              ;
    BCS .skipInputBufferHandling                        ; if (X > 1) then branch (it's not an input buffer)
    JSR +                                               ;
.skipInputBufferHandling
    JMP .flushBufferX                                   ;

; ***************************************************************************************
    LDX .currentInputBuffer                             ;
+
    LDA #0                                              ;
    STA .softKeyStringLength                            ;
    JMP .flushBufferX                                   ;

