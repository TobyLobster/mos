    STA (.oswordX),Y                                    ; store data
    LDA #0                                              ; issue 0s
-
    INY                                                 ; increment Y
    STA (.oswordX),Y                                    ; store data
    CPY #4                                              ; to next bytes until Y=4
    BNE -                                               ;
    RTS                                                 ;

