    PHA                                                 ; push A
    SEC                                                 ; set carry
    LDA .vduTextWindowRight                             ; text window right
    SBC .vduTextWindowLeft                              ; text window left
    TAY                                                 ;
    INY                                                 ;
    TYA                                                 ;
--
    PHA                                                 ;
    LDY .vduBytesPerCharacter                           ;
    DEY                                                 ;
-
